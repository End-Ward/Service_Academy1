@using Microsoft.AspNetCore.Identity
@model ManageAccountViewModel
@inject UserManager<ApplicationUser> _userManager
@{
    ViewData["Title"] = "Home Page";
}

@{
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/AdminStyle/ManageAccountStyle.css">
}

@section Scripts {
    <script src="~/js/AdminScript/Admin.js"></script>
}

<div class="container">
    <div class="container-fluid mt-4 mb-5">
        <div class="row">
            <!-- Main Section -->
            <div class="col-lg-8">
                <h2>Account Management</h2>

                <!-- Search and Filter Section -->
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <input type="text" id="searchAccount" class="form-control w-50" placeholder="Search by username or role..." onkeyup="filterAccounts()">
                    <select id="filterStatus" class="form-control w-25 ml-2" onchange="filterAccounts()">
                        <option value="">Filter by Status</option>
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                        <option value="Pending">Pending</option>
                    </select>
                </div>

                <!-- Account List Table -->
                <div class="table-responsive mt-4">
                    <table id="accountTable" class="table table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Users != null && Model.Users.Count > 0)
                            {
                                @foreach (var user in Model.Users)
                                {
                                    <tr>
                                        <td>@user.FullName</td>
                                        <td>@user.Email</td>
                                        <td>
                                            <!-- Fetch and display roles -->
                                            @{
                                                var roles = await _userManager.GetRolesAsync(user);
                                                @string.Join(", ", roles)
                                            }
                                        </td>
                                        <td>
                                            <a class="btn btn-primary btn-sm" asp-action="EditAccount" asp-route-id="@user.Id">Edit</a>
                                            <button class="btn btn-danger btn-sm" onclick="deleteAccount('@user.Id')">Delete</button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4">No accounts found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Create New Account Form -->
                <h2 class="mt-5">Create New Account</h2>
                @await Html.PartialAsync("_CreateAccountForm", new CreateAccountViewModel())

            </div>

            <!-- Sidebar Section -->
            <div class="col-lg-4">
                <!-- Account Roles Info -->
                <h4>Account Roles</h4>
                <ul class="list-group mb-4">
                    <li class="list-group-item"><strong>Administrator:</strong> Full permissions to manage LMS.</li>
                    <li class="list-group-item"><strong>Instructor:</strong> Manage courses, enrollments, and grades.</li>
                    <li class="list-group-item"><strong>Student:</strong> Access courses, view grades, and track progress.</li>
                </ul>

                <!-- Account Status Info -->
                <h4>Account Status</h4>
                <ul class="list-group">
                    <li class="list-group-item"><strong>Active:</strong> The account is active and can access the LMS.</li>
                    <li class="list-group-item"><strong>Inactive:</strong> The account is inactive and cannot access the LMS.</li>
                    <li class="list-group-item"><strong>Pending:</strong> The account is awaiting approval.</li>
                </ul>
            </div>
        </div>
    </div>
</div>